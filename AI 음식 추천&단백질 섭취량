def to_ts(d): return pd.Timestamp(d).normalize()
TODAY_TS = to_ts(dt.date.today())

# ì—…ë¡œë”/ë²„íŠ¼
uploader = W.FileUpload(accept=".xlsx,.xls", multiple=True, description="ì—‘ì…€ ì—…ë¡œë“œ(ì„ íƒ)")
